#!/usr/bin/perl


system clear;
$version="1.0.1";
open(fl1,"/root/cookbooks/docker/attributes/default.rb") or die $!;
open(fl2,">/tmp/~default.rb");
while ($str=<fl1>) {
  chomp $str;
  if ( $str =~ "version") {
     @ver=split('=',$str);
     @ver[1] =  "\"$version" . "\"" ;
     $st=@ver[0] ."= ". @ver[1];
     print  fl2 "$st\n";
  }
  else
  {
     print  fl2 "$str\n";
  
  }
}
close (fl1);close (fl2);
system "mv -f /tmp/~default.rb /root/cookbooks/docker/attributes/default.rb"
